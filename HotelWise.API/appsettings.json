  "Rag": {
    "AIChatService": "OpenAI",
    "AIEmbeddingService": "OpenAIEmbeddings",
    "BuildCollection": true,
    "CollectionName": "pdfcontent",
    "DataLoadingBatchSize": 10,
    "DataLoadingBetweenBatchDelayInMilliseconds": 1000,
